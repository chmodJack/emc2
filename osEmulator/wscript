#!/usr/bin/env python
# -*- coding: iso-8859-1 -*-

import os

def build(bld):
    bld.objects(source='syscCallB.cpp',
        includes = '. ../bfdFontend ../utils ..',
        use = 'SYSTEMC BOOST BOOST_REGEX BFD',
        target = 'syscall',
        install_path = None
    )
    
    bld.install_files(os.path.join(bld.env.PREFIX, 'include'), 'osEmulator.hpp syscCallB.hpp')
