#!/usr/bin/env python
# -*- coding: iso-8859-1 -*-

def build(bld):
    bld.objects(source='syscCallB.cpp',
        includes = '. ../bfdFontend ../utils ..',
        use = 'SYSTEMC BOOST BOOST_REGEX BFD',
        target = 'syscall',
        install_path = None
    )
    
    bld.install_files('${PREFIX}/include', 'osEmulator.hpp syscCallB.hpp')
